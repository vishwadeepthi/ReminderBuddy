<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login | Reminder Buddy</title>
    <% include ./partials/header.ejs %>
    <style>

    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
    </style>
</head>
<body>
    <div class="ui middle aligned center aligned grid">
        <div class="column">
          <h2 class="ui teal image header">
            <i class="phone volume icon big" style="color : pink;"></i>
            <div class="content">
              Log-in to your <span style = "color : pink;">Reminder Buddy</span>
            </div>
          </h2>
          <form class="ui large form" method="POST" action ="/login">
            <div class="ui stacked segment">
              <div class="field">
                <div class="ui left icon input">
                  <i class="user icon"></i>
                  <input type="text" name="username" placeholder="Username" value = "hackerearth">
                </div>
              </div>
              <div class="field">
                <div class="ui left icon input">
                  <i class="lock icon"></i>
                  <input type="password" name="password" placeholder="Password" value = "12345">
                </div>
              </div>
              <button class="ui fluid large submit button pink">Login</button>
            </div>
      
            <div class="ui error message"></div>
      
          </form>
    
        </div>
      </div>
</body>
</html>